{
  "extends": "../tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "strict": false,
    "strictNullChecks": true,
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "paths": {
      "*": ["./server/*"],
      "@app/*": ["./server/src/*"],
      "@domain/*": ["./server/src/domain/*"]
    }
  }
}
