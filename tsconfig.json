{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["./*"],
      "@/*": ["./client/*"],
      "@admin/*": ["./admin/*"],
      "@client/*": ["./client/*"],
      "@server/*": ["./server/src/*"],
      "@domain/*": ["./server/src/domain/*"],
      "@shared/*": ["./server/src/shared/*"],
      "@filters/*": ["./server/src/filters/*"],
      "@helpers/*": ["./server/src/helpers/*"],
      "@decorators/*": ["./server/src/decorators/*"],
      "@constants/*": ["./server/src/constants/*"],
      "@trpc/*": ["./server/src/domain/trpc/*"]
    }
  }
}
